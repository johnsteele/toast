<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Slideshow Editor"
            extensions="show"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.eclipse.examples.slideshow.ui.editors.SlideshowEditor"
            id="org.eclipse.examples.slideshow.ui.editors.SlideshowEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.examples.slideshow.ui"
            name="Slideshow">
      </category>
      <view
            category="org.eclipse.examples.slideshow.ui"
            class="org.eclipse.examples.slideshow.ui.views.SlideView"
            icon="icons/x-office-presentation.png"
            id="org.eclipse.examples.slideshow.ui.views.SlideView"
            name="Slide View">
      </view>
   </extension>

</plugin>
